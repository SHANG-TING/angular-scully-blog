{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@web/home/feature": ["libs/web/home/feature/src/index.ts"],
      "@web/post/feature/detail": ["libs/web/post/feature/detail/src/index.ts"],
      "@web/post/feature/list": ["libs/web/post/feature/list/src/index.ts"],
      "@web/post/feature/shell": ["libs/web/post/feature/shell/src/index.ts"],
      "@web/shared/data-access/blog-api": [
        "libs/web/shared/data-access/blog-api/src/index.ts"
      ],
      "@web/shared/data-access/models": [
        "libs/web/shared/data-access/models/src/index.ts"
      ],
      "@web/shell/feature": ["libs/web/shell/feature/src/index.ts"],
      "@web/shell/ui/footer": ["libs/web/shell/ui/footer/src/index.ts"],
      "@web/shell/ui/header": ["libs/web/shell/ui/header/src/index.ts"],
      "@web/shell/ui/layout": ["libs/web/shell/ui/layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
